{
	"version": "2.0.0",
	"tasks": [
		{
            "type": "shell",
            "label": "g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "${file}",
                "-g",
                "-O0",
                "-std=gnu++23",
                "-I",
                "${workspaceFolder}/ac-library",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "group": "build"
        },
		{
            "label": "submit",
            "group": "build",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/submit.sh",
            "args": [
				"${fileBasenameNoExtension}",
				"${file}",
				"${relativeFileDirname}",
                "${fileExtname}"
            ]
        },
        {
            "label": "inin_abc",
            "group": "build",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/init_abc.sh",
            "args": [
				"${workspaceFolder}",
                "${input:param}"
            ]
        }
	],
    "inputs": [
        {
            "id": "param", // ${input:***}で指定したID
            "description": "Param1:", // 入力説明文
            "type": "promptString" // 入力タイプ
        }
    ]
}
